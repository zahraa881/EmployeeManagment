@model IEnumerable<Employee>
@{ 

    ViewBag.Title = "Employee List";
    
}
   
       <div class="card-header text-center">
           @foreach (var employee in Model)
           {
               var PhotoPath = "~/images/" +(employee.PhotoPath ?? "Background.jpg");
           <div class="card m-3">
               <div class="card-header">

               <h3>@employee.Name</h3>
                   </div>

               <img class="card-img-top imageThumnail" src="@PhotoPath" asp-append-version="true"/>
               <div class="card-footer text-center">
                   <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id"
                      class="btn btn-primary m-1">View</a>
                   <a class="btn btn-primary m-1" 
                      asp-controller="Home" 
                      asp-action="Edit" 
                      asp-route-id="@employee.Id" >Edit</a>
                   <a href="#" class="btn btn-danger m-1">Delete</a>

               </div>
           </div>


            }

       </div>
 
